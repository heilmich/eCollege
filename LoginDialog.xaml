<Window x:Class="eCollege.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eCollege"
        mc:Ignorable="d"
        Title="Вход в систему" Height="200" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
        <StackPanel HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Margin="0,0,20,0">
                    Логин
                </TextBlock>
                <TextBox Name="tbLogin" MinHeight="20" MinWidth="100" HorizontalAlignment="Right">
                
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Margin="0,0,20,0">
                    Пароль
                </TextBlock>
                <TextBox Name="tbPassword" MinHeight="20" MinWidth="100">

                </TextBox>
            </StackPanel>
            <Button Name="btnSignIn" Content="Войти" Margin="0,20,0,0" Click="btnSignIn_Click"/>
        </StackPanel>
    </Grid>
</Window>
